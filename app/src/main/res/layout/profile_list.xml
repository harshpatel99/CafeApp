<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/profile_data_margin_tb"
    android:layout_marginBottom="@dimen/profile_data_margin_tb"
    android:layout_marginStart="@dimen/profile_data_margin_rl"
    android:layout_marginEnd="@dimen/profile_data_margin_rl"
    android:orientation="vertical">

    <TextView
        android:id="@+id/profileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/profile_text_margin_bottom"
        android:textSize="@dimen/profile_title_size" />

    <TextView
        android:id="@+id/profileData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@id/profileTitle"
        android:textSize="@dimen/profile_data_size" />

    <ImageView
        android:id="@+id/profileEdit"
        android:layout_width="@dimen/profile_edit_image_width"
        android:layout_height="@dimen/profile_edit_image_height"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_outline_edit_24px" />

</RelativeLayout>