<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/updateMenuListHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_menu"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/update_menu_list_header_margin"
        android:textSize="@dimen/category_header_text_size" />

    <com.google.android.material.chip.Chip
        android:id="@+id/updateMenuListHeaderAddCategoryButton"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/list_add_category_edit_margin_rl"
        android:text="@string/add_category" />

</RelativeLayout>