<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:layout_margin="@dimen/sign_in_margin"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sign_in_margin_rl"
        android:layout_marginTop="48dp"
        android:layout_marginRight="@dimen/sign_in_margin_rl"
        android:layout_marginBottom="@dimen/sign_in_margin_tb"
        android:text="@string/sign_in"
        android:textSize="@dimen/sign_in_text_size" />

    <TextView
        android:id="@+id/signUpInLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sign_in_margin_rl"
        android:layout_marginRight="@dimen/sign_in_margin_rl"
        android:layout_marginBottom="28dp"
        android:text="@string/new_user_sign_up_text"
        android:textSize="14sp" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sign_in_margin_rl"
        android:layout_marginTop="@dimen/sign_in_margin_tb"
        android:layout_marginRight="@dimen/sign_in_margin_rl"
        android:layout_marginBottom="@dimen/sign_in_margin_tb">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/signInEmailEditText"
            android:layout_width="match_parent"
            android:inputType="textEmailAddress"
            android:layout_height="wrap_content"
            android:hint="@string/e_mail" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sign_in_margin_rl"
        android:layout_marginTop="@dimen/sign_in_margin_tb"
        android:layout_marginRight="@dimen/sign_in_margin_rl"
        android:layout_marginBottom="@dimen/sign_in_margin_tb">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/signInPasswordEditText"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:hint="@string/password" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/loadingIV"
        android:layout_width="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="50dp"
        android:visibility="gone"
        android:src="@drawable/loading_circles"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sign_in_margin_tb"
        android:layout_marginBottom="@dimen/sign_in_margin_tb"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/forgotPasswordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sign_in_margin_rl"
            android:layout_marginTop="@dimen/sign_in_margin_tb"
            android:layout_marginRight="@dimen/sign_in_margin_rl"
            android:layout_marginBottom="@dimen/sign_in_margin_tb"
            android:text="@string/forgot_password"
            android:textSize="@dimen/forgot_password_text_size" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fabSignIn"
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sign_in_margin_rl"
            android:layout_marginTop="@dimen/sign_in_margin_tb"
            android:layout_marginRight="@dimen/sign_in_margin_rl"
            android:layout_marginBottom="@dimen/sign_in_margin_rl"
            android:text="@string/sign_in"
            app:icon="@drawable/ic_arrow_forward_black_24dp" />

    </RelativeLayout>

</LinearLayout>